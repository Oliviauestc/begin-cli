#! /usr/bin/env node

const program = require('commander');
const Project = require('./../src/index');

program
  .option('--name [name]', '项目名称')
  .option('--desc [desc]', '项目描述')
  .parse(process.argv);

const { name, desc } = program;
const projectName = name || program.args[0];

const project = new Project({
  projectName,
  description: desc
});

project.create();